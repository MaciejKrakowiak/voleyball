<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add new match</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center mb-4">Add new match</h1>

        <form action="/matches" method="POST" id="addMatchForm" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="date" class="form-label">Match date:</label>
                <input type="datetime-local" class="form-control" id="date" name="date" required>
                <div id="date-error" class="text-danger mt-1" style="display: none;">Match can't be in past!</div>
            </div>

            <div class="mb-3">
                <label for="teamA_name" class="form-label">Team A:</label>
                <input type="text" class="form-control" id="teamA_name" name="teamA_name" required>
            </div>

            <div class="mb-3">
                <label for="teamB_name" class="form-label">Team B:</label>
                <input type="text" class="form-control" id="teamB_name" name="teamB_name" required>
            </div>

            <button type="submit" class="btn btn-primary">Add match</button>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        //Checking if date is correct
        const form = document.getElementById('addMatchForm');
        const dateInput = document.getElementById('date');
        const dateError = document.getElementById('date-error');

        form.addEventListener('submit', function(event) {
            const dateValue = dateInput.value;
            const now = new Date();
            const matchDate = new Date(dateValue);
            now.setSeconds(0);
            now.setMilliseconds(0);

            if (matchDate < now) {
                dateError.style.display = 'block';
                event.preventDefault();
            } else {
                dateError.style.display = 'none';
                window.location.href = "/matches";
            }
        });
    </script>
</body>
</html>
